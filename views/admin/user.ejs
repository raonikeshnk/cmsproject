<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/admin/css/style.css">
</head>

<body>
    <%-include('../../partials/header.ejs')%>

    <section id="mid">
        <div class="container">
            <div class="row">
                <%-include('../../partials/admin/left.ejs')%>

                <div class="col-md-9">
                    <h2>User's management</h2>
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>S No.</th>
                                <th>Username</th>
                                <th>Creation Date</th>
                                <th>Subscription Status</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <%record.forEach((result, key)=>{%>
                                <tr>
                                    <td><%=key+1%></td>
                                    <td><%=result.email%></td>
                                    <td><%=result.creationDate%></td>
                                    <td><a href="/admin/userstatus/<%=result.id%>"><button><%=result.sub%></button></a></td>
                                    <td><a href="/admin/userstatus/<%=result.id%>"><button><%=result.status%></button></a></td>
                                </tr>
                            <%})%>
                            
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>




    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
</body>

</html>